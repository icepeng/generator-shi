{
  "name": "<%= name %>",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "gulp",
    "test": "export PATH=$(pwd)/node_modules/.bin:$PATH; nyc --require ts-node/register _mocha --opts test/mocha.opts",
    "lint": "tslint \"src/**/*.ts\" --project tsconfig.json --type-check",
    "lint:fix": "tslint \"src/**/*.ts\" --project tsconfig.json --type-check --fix"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "dist/",
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "debug": "^2.2.0",
    "express": "^4.14.0",
    "humps": "^2.0.0",
    "joi": "^10.2.0",
    "morgan": "^1.7.0",
    "pg-promise": "^5.5.2"
  },
  "devDependencies": {
    "@types/humps": "^1.1.2",
    "@types/body-parser": "^1.16.3",
    "@types/chai": "^3.4.34",
    "@types/chai-http": "^0.0.30",
    "@types/debug": "0.0.29",
    "@types/express": "^4.0.35",
    "@types/joi": "^10.0.0",
    "@types/mocha": "^2.2.39",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.0",
    "@types/sinon": "^2.1.1",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-nodemon": "^2.2.1",
    "gulp-typescript": "^3.1.4",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "node-mocks-http": "^1.6.1",
    "nodemon": "^1.11.0",
    "nyc": "^10.1.2",
    "sinon": "^2.1.0",
    "ts-node": "^3.0.2",
    "tslint": "^5.0.0",
    "typescript": "^2.1.5"
  }
}
